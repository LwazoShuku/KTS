@model IEnumerable<KTS.Models.Booking>

@{
    ViewBag.Title = "Index";
}

<body>
    <div class="container body-content">
        <h2>Make a Booking</h2>
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.dateTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.time)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Surname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.vehicle_Registration)
                </th>
                <th></th>
            </tr>

        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.dateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.time)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.vehicle_Registration)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.bookingID }) |
                    @Html.ActionLink("Details", "Details", new { id=item.bookingID }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.bookingID })
                </td>
            </tr>
        }

        </table>
    </div>
</body>