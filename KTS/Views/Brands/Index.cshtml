@model IEnumerable<KTS.Models.Brands>

@{
    ViewBag.Title = "Index";
}

<body>
    <div class="container body-content">
        <h2>Index</h2>

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.type.productTy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.brandName)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.type.productTy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.brandName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.brandID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.brandID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.brandID })
                    </td>
                </tr>
            }

        </table>
    </div>
</body>