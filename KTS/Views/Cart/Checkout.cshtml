@using KTS.Models
@{
    /**/

    ViewBag.Title = "Index";
}

<body>
    <div class="container body-content">

        <h2>Shopping Cart</h2>

        <table border="1">


            <tr>

                <th>Product Name</th>
                <th>Product Description</th>
                <th>Price</th>

                <th>Sub Total</th>
            </tr>

            @foreach (var cart in (List<Cart>)Session["Cart"])
            {

                <tr>


                    <td></td>
                    <td>@cart.Inv.ProductDescription</td>
                    <td>@cart.Inv.Price</td>

                    <td>@(String.Format("{0:N0}", cart.Inv.Price * cart.Quantity))</td>


                </tr>



            }




        </table>

        <div class="form-horizontal">
            <hr />
            @model Cart
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group ">
                @Html.LabelFor(m => m.shipping, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 ">
                  
                </div>
            </div>
          







            <h1> @ViewBag.Total </h1>
            <br />

            @Html.ActionLink("Pay with PayPal", "PaymentWithPaypal", "Cart", new { target = "_blank" })


        </div>
   </div>
</body>